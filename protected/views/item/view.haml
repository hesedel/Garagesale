:php
	$this->layout='column3';

	$this->breadcrumbs=array(
		'Ads'=>array('index'),
		$model->id,
	);

	$this->menu=array(
		array('label'=>'List Item', 'url'=>array('index')),
		array('label'=>'Create Item', 'url'=>array('create')),
		array('label'=>'Update Item', 'url'=>array('update', 'id'=>$model->id)),
		array('label'=>'Delete Item', 'url'=>'#', 'linkOptions'=>array('submit'=>array('delete','id'=>$model->id),'confirm'=>'Are you sure you want to delete this item?')),
		array('label'=>'Manage Item', 'url'=>array('admin')),
	);

#item_view

	%h2 #{$model->title}
	%h3 PHP #{number_format(CHtml::encode($model->price))}
	:php
		$images = Yii::app()->db->createCommand()
			->select('*')
			->from('item_image')
			->where('item_id=:item_id', array(':item_id'=>$model->id))
			->order('index')
			->queryAll();
		foreach($images as $image)
			echo CHtml::image('/images/slir/w530/images/uploads/items/'.$image['id'].'.'.$image['type'], $image['id'].'.'.$image['type']);
	%p #{$model->description}

	:php
		$this->widget('zii.widgets.CDetailView', array(
			'data'=>$model,
			'attributes'=>array(
				'id',
				'created',
				'updated',
				'title',
				'price',
				'description',
				'category_id',
				'condition_id',
				'user_id',
			),
		));